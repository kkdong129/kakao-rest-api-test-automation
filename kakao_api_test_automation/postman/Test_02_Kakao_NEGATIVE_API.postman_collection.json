						"exec": [
							"pm.test(\"[TC-01] 유효하지 않은 토큰 차단\", function () {",
							"    pm.response.to.have.status(401);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.code).to.eql(-401);",
							"    console.log(\"▶ [TC-01] 성공 - Kakao Code: \" + jsonData.code);",
							"});"
